CC = g++

CFLAGS = -I. -I/usr/local/include -L/usr/local/lib -Wall -I/home/pi/xSens -L/home/pi/xSens
LDFLAGS = -lwiringPi -lboost_thread
SOURCES = logger.cpp gpio.cpp imu_euler.cpp imu_test.cpp
OBJECTS = $(SOURCES: .cpp = .o)
HOME = /home/pi
XSENS_OBJS = $(HOME)/xSens/cmt1.o $(HOME)/xSens/cmt2.o $(HOME)/xSens/cmt3.o $(HOME)/xSens/cmtmessage.o $(HOME)/xSens/cmtpacket.o $(HOME)/xSens/cmtscan.o $(HOME)/xSens/xsens_std.o $(HOME)/xSens/xsens_time.o $(HOME)/xSens/xsens_exception.o
EXECUTABLE = imu_test

all:	$(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS) $(CFLAGS) $(XSENS_OBJS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@


clean:
		rm -f *.o
		rm -f $(EXECUTABLE)
